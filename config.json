{
  "source": ["tokens/**/*.json"],
  "transforms": {
    "permutations": {
      "type": "function",
      "function": "permutateThemes",
      "data": "$themes.json",
      "output": "permutations.json"
    }
  },
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "vars-%key%.css",
          "format": "css/variables"
        }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "variables-%key%.js",
          "format": "javascript/es6",
          "filter": {
            "attributes": {
              "category": "theme"
            }
          }
        }
      ]
    }
  }
}
